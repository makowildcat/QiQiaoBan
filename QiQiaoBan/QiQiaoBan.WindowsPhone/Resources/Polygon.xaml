<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QiQiaoBan.Common">

    <Style x:Key="PolygonNormal" TargetType="Polygon">
        <Setter Property="Stroke" Value="{ThemeResource ApplicationPageBackgroundThemeBrush}"/>
        <Setter Property="Fill" Value="{ThemeResource PhoneAccentBrush}"/>
    </Style>
    <Style x:Key="PolygonLock" TargetType="Polygon">
        <Setter Property="Stroke" Value="{ThemeResource ApplicationHeaderForegroundThemeBrush}"/>
        <Setter Property="Fill" Value="{ThemeResource ApplicationHeaderForegroundThemeBrush}"/>
    </Style>
    <Style x:Key="PolygonMatch" TargetType="Polygon">
        <Setter Property="Stroke" Value="{ThemeResource PhoneAccentBrush}"/>
        <Setter Property="Fill" Value="{ThemeResource ApplicationPageBackgroundThemeBrush}"/>
    </Style>
    
</ResourceDictionary>
