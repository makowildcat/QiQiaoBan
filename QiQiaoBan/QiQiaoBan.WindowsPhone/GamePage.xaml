<Page
    x:Class="QiQiaoBan.GamePage"
    DataContext="{Binding Main.SelectedPuzzle, Source={StaticResource Locator}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:QiQiaoBan"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:common="using:QiQiaoBan.Common"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding Name, Mode=OneTime}"/>
            
            <common:ItemsControlCanvas x:Name="itemsControlPieces" ItemsSource="{Binding Pieces}">
                <common:ItemsControlCanvas.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas/>
                    </ItemsPanelTemplate>
                </common:ItemsControlCanvas.ItemsPanel>
                <common:ItemsControlCanvas.ItemTemplate>
                    <DataTemplate>
                        <Polygon Points="{Binding Points, Mode=OneTime}"
                                 Fill="Purple"
                                 ManipulationMode="All"
                                 Tag="{Binding IndexTag, Mode=OneTime}">
                            <Polygon.RenderTransform>
                                <RotateTransform Angle="{Binding Angle, Mode=OneWay}"/>
                            </Polygon.RenderTransform>
                            
                            <interactivity:Interaction.Behaviors>
                                <core:EventTriggerBehavior EventName="ManipulationDelta">
                                    <core:InvokeCommandAction Command="{Binding ElementName=itemsControlPieces, Path=DataContext.PolygonManipulationDeltaCommand, Mode=OneWay}"/>
                                </core:EventTriggerBehavior>
                                <core:EventTriggerBehavior EventName="Tapped">
                                    <core:InvokeCommandAction Command="{Binding ElementName=itemsControlPieces, Path=DataContext.PolygonTappedCommand, Mode=OneWay}"/>
                                </core:EventTriggerBehavior>
                            </interactivity:Interaction.Behaviors>
                        </Polygon>
                    </DataTemplate>
                </common:ItemsControlCanvas.ItemTemplate>

            </common:ItemsControlCanvas>
        </StackPanel>       
    </Grid>
</Page>
